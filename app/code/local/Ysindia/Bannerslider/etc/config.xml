<config>
    <modules>
        <Ysindia_Bannerslider>
            <version>0.1.0</version>
        </Ysindia_Bannerslider>
    </modules>
    <frontend>
        <routers>
            <bannerslider>
                <use>standard</use>
                <args>
                    <module>Ysindia_Bannerslider</module>
                    <frontName>bannerslider</frontName>
                </args>
            </bannerslider>
        </routers>
        <layout>
            <updates>
                <bannerslider>
                    <file>bannerslider.xml</file>
                </bannerslider>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<bannerslider>
				<use>admin</use>
				<args>
					<module>Ysindia_Bannerslider</module>
					<frontName>bannerslider</frontName>
				</args>
			</bannerslider>
        </routers>
    </admin>
    <adminhtml>
		<!--<menu>
			<bannerslider module="bannerslider">
				<title>Bannerslider</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="bannerslider">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>bannerslider/adminhtml_bannerslider</action>
					</items>
				</children>
			</bannerslider>
		</menu>-->
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Ysindia_Bannerslider>
							<title>Bannerslider Module</title>
							<sort_order>10</sort_order>
						</Ysindia_Bannerslider>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<bannerslider>
					<file>bannerslider.xml</file>
				</bannerslider>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <bannerslider>
                <class>Ysindia_Bannerslider_Model</class>
                <resourceModel>bannerslider_mysql4</resourceModel>
            </bannerslider>
            <bannerslider_mysql4>
                <class>Ysindia_Bannerslider_Model_Mysql4</class>
                <entities>
                    <bannerslider>
                        <table>bannerslider</table>
                    </bannerslider>
                </entities>
            </bannerslider_mysql4>
        </models>
        <resources>
            <bannerslider_setup>
                <setup>
                    <module>Ysindia_Bannerslider</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bannerslider_setup>
            <bannerslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bannerslider_write>
            <bannerslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bannerslider_read>
        </resources>
        <blocks>
            <bannerslider>
                <class>Ysindia_Bannerslider_Block</class>
            </bannerslider>
        </blocks>
        <helpers>
            <bannerslider>
                <class>Ysindia_Bannerslider_Helper</class>
            </bannerslider>
        </helpers>
    </global>
</config>