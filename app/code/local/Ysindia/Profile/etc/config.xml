<?xml version="1.0"?>
<config>
    <modules>
        <Ysindia_Profile>
            <version>0.1.0</version>
        </Ysindia_Profile>
    </modules>

    <global>

        <helpers>
            <profile>
                <class>Ysindia_Profile_Helper</class>
            </profile>
        </helpers>

    </global>


    <frontend>
        <routers>
            <profile>
                <use>standard</use>
                <args>
                    <module>Ysindia_Profile</module>
                    <frontName>profile</frontName>
                </args>
            </profile>
        </routers>
        <layout>
            <updates>
                <profile>
                    <file>profile.xml</file>
                </profile>
            </updates>
        </layout>
    </frontend>
</config>