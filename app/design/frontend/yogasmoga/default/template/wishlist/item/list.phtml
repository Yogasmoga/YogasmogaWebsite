<?php
    $columns = $this->getColumns();
?>
<table class="tblwishlist" id="wishlist-table">
    <thead>
        <tr>
            <?php /*
            <?php foreach ($columns as $column): ?>
                <th><?php echo $column->getTitle();?></th>
            <?php endforeach; ?>
            */ ?>
            <th>&nbsp;</th>
            <th colspan="3">ITEM</th>
            <th colspan="2">PRICE</th>
        </tr>
    </thead>
    <tbody>
        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
            <?php
                $_product = $item->getProduct();
                $_product = Mage::getModel('catalog/product')->load($_product->getId());
            ?>
                <tr id="item_<?php echo $item->getId();?>">
                    <td class="removeitem">
                        <a class="btn-remove btn-remove2" title="Remove Item" href="<?php echo Mage::helper('core/url')->getHomeUrl()."/wishlist/index/remove/item/".$item->getWishlistItemId(); ?>">Remove item</a>
                    </td>
                    <td class="primage">
                        <img src="<?php echo Mage::helper('catalog/image')->init($_product, 'image')->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(FALSE)->resize(75, 75); ?>" />
                    </td>
                    <td class="prname">
                        <?php echo html_entity_decode(Mage::helper('catalog/output')->productAttribute($_product, $_product->getName(), 'name')); ?>
                    </td>
                    <td class="prnote">
                        <textarea placeholder="Notes. ." title="Comment" name="description[<?php echo $item->getWishlistItemId(); ?>]"><?php echo trim(($this->escapeHtml($item->getDescription()))); ?></textarea>
                    </td>
                    <td class="prprice">
                        <?php
                            $price = $_product->getSpecialPrice();
                            if($price == "")
                                $price = $_product->getPrice();
                            $price = round($price,2);
                              if (floor($price)==$price)
                                $price = floor($price);
                            echo "$".number_format((float)($price), 0, '.', '');
                        ?>
                    </td>
                    <td class="praddtocart">
                        <button onclick="addWItemToCart(<?php echo $item->getWishlistItemId(); ?>);" downimageurl="<?php echo $this->getSkinUrl('images/add_to_cart_on.png'); ?>" imageurl="<?php echo $this->getSkinUrl('images/add_to_cart_off.png'); ?>" class="addtocartbtn spbutton custombtn" type="submit"></button>
                    </td>
                    <?php /*
                    <?php foreach ($columns as $column): ?>
                        <td><?php $column->setItem($item); echo $column->toHtml($item);?>
                            <?php
                                $product = $item->getProduct(); 
                                echo $product->getId(); ?>
                        </td>
                    <?php endforeach; ?>
                    */ ?>
                </tr>
            <?php endforeach ?>
        <?php else: ?>
            <td colspan="<?php echo count($columns);?>" class="wishlist-empty"><?php echo $this->__('This Wishlist has no Items');?></td>
        <?php endif; ?>
    </tbody>
</table>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
