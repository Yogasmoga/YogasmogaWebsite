<?php if ($_specificInfo = $this->getSpecificInformation()):?>
<table cellspacing="0">
    <tbody>
    <?php foreach ($_specificInfo as $_label => $_value):?>
        <?php
            if(strcasecmp($this->escapeHtml($_label),'saved card') == 0)
                continue;
        ?>       
        <tr>
            <td style="padding: 0 0 !important;">
                <span style="font-size: 9.0pt; font-weight:normal; font-family: "Verdana","sans-serif"; color: #666666; text-transform: uppercase;"><?php echo strtoupper($this->escapeHtml($_label)) ?>:&nbsp;<?php echo nl2br(implode($this->getValueAsArray($_value, true), "\n"))?></span>                
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<?php endif;?>

<?php echo $this->getChildHtml()?>

