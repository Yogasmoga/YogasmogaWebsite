                    jQuery("#popup-mailsignup .form-loader-mail").hide();

                    if (status == "success") {
                        jQuery(".sign-up-popup").hide();
                        jQuery(".thanks-popup").show();
                        jQuery("#popup-mailsignup #signup-button-mailc").removeClass('sending');
                        jQuery("#popup-mailsignup #signup-button-mailc").attr("value","");
                        jQuery("#popup-mailsignup #signup-button-mailc").addClass('subscribed');
                        jQuery("#popup-mailsignup .tick-mark").show();
                        jQuery("#popup-mailsignup #err-msg").html(data.error).css("visibility","hidden");
                        jQuery('#signup-button-mailc').removeClass('on');
