        $grandTotal = $grandTotal - $cattotal;

        if ($creditpointsentered > $grandTotal)
        {
            //Mage::getSingleton('core/session')->setCreditPointsApplied($grandTotal);
            return $grandTotal;
        }
        else
        {
            return $creditpointsentered;
        }

