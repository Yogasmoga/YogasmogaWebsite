    function formatshipmethod($title)
    {
        if(strrpos($title, "-") !== false)
        {
            $index = strrpos($title, "-");
            $output = "<strong>".substr($title, 0, $index)."</strong>";
            $price = trim(substr($title, $index + 1));
            $output .= "(".$price.")";
            return $output;
        }
        else
            return $title;
    }

